<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t "w_orders" %></h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t "admin_page.orders.list" %>
      </div>

      <div class="row">
        <div class="col-sm-offset-3 col-sm-6 table-search">
          <%= search_field_tag :table_search, nil, class: "form-control input-sm",
            placeholder: t("admin_page.table.h_search") %>
        </div>
      </div>

      <div class="panel-body">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th class="text-center"><%= t "admin_page.w_id" %></th>
              <th class="text-center"><%= t "admin_page.w_customer.name" %></th>
              <th class="text-center"><%= t "admin_page.w_customer.address" %></th>
              <th class="text-center"><%= t "admin_page.w_customer.phone" %></th>
              <th class="text-center"><%= t "admin_page.w_customer.email" %></th>
              <th class="text-center"><%= t "admin_page.w_total_price" %></th>
              <th class="text-center"><%= t "admin_page.w_status" %></th>
              <th class="text-center"><%= t "admin_page.w_action" %></th>
            </tr>
          </thead>
          <tbody>
            <% if @orders.any? %>
              <%= render @orders, statuses: @statuses %>
            <% else %>
              <%= t "admin_page.w_no_record" %>
            <% end %>
          </tbody>
        </table>
        <div>
          <%= paginate @orders %>
        </div>
      </div>
    </div>
  </div>
</div>
