<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t "w_orders" %></h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t "admin_page.orders.edit" %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-5">
            <%= form_tag nil do %>
              <div class="form-group">
                <%= label_tag :order_name, t("admin_page.w_customer.name") %>
                <%= text_field_tag :order_name, nil, class: "form-control",
                  placeholder: t("admin_page.orders.h_.name") %>
              </div>
              <div class="form-group">
                <%= label_tag :order_address, t("admin_page.w_customer.address") %>
                <%= text_field_tag :order_address, nil, class: "form-control",
                  placeholder: t("admin_page.orders.h_.address") %>
              </div>
              <div class="form-group">
                <%= label_tag :order_email, t("admin_page.w_customer.email") %>
                <%= text_field_tag :order_email, nil, class: "form-control",
                  placeholder: t("admin_page.orders.h_.email") %>
              </div>
              <div class="form-group">
                <%= label_tag :order_phone, t("admin_page.w_customer.phone") %>
                <%= text_field_tag :order_phone, nil, class: "form-control",
                  placeholder: t("admin_page.orders.h_.phone") %>
              </div>
              <div class="form-group">
                <%= label_tag :order_status, t("admin_page.w_status") %>
                <%= select_tag :order_status,
                  options_for_select(order_status_list @statuses),
                  class: "form-control" %>
              </div>
              <%= button_tag t("admin_page.button.edit.order"),
                class: "btn btn-outline btn-success" %>
            <% end %>
          </div>
          <div class="col-lg-7">
            <div class="text-center">
              <h3>
                <%= t "admin_page.orders.details" %>
              </h3>

              <div class="row">
                <div class="col-sm-offset-3 col-sm-6 table-search">
                  <%= search_field_tag :table_search, nil,
                    class: "form-control input-sm",
                    placeholder: t("admin_page.table.h_search") %>
                </div>
              </div>

              <div class="panel-body">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th class="text-center"><%= t "admin_page.w_id" %></th>
                      <th class="text-center">
                        <%= t "admin_page.w_product_name" %>
                      </th>
                      <th class="text-center">
                        <%= t "admin_page.w_product_id" %>
                      </th>
                      <th class="text-center">
                        <%= t "admin_page.w_quantity" %>
                      </th>
                      <th class="text-center">
                        <%= t "admin_page.w_unit_price" %>
                      </th>
                      <th class="text-center"><%= t "admin_page.w_action" %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render "admin/order_details/order_detail" %>
                    <tr>
                      <table class="table table-striped table-bordered table-hover">
                        <tr>
                          <th><%= t "admin_page.w_total_price" %>:</th>
                          <td>12345</td>
                        </tr>
                      </table>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
