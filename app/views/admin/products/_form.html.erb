<%= form_for [:admin, product] do |f| %>
  <div class="form-group">
    <%= f.label :name, t("admin_page.table.head.name") %>
    <%= f.text_field :name, class: "form-control",
      placeholder: t("admin_page.products.h_.name") %>
    <%= render "shared/error_messages", object: product, field: :name %>
  </div>
  <div class="form-group">
    <%= f.label :quantity, t("admin_page.w_quantity") %>
    <%= f.number_field :quantity, class: "form-control",
      placeholder: t("admin_page.products.h_.quantity") %>
    <%= render "shared/error_messages", object: product, field: :quantity %>
  </div>
  <div class="form-group">
    <%= f.label :price, t("admin_page.w_price") %>
    <%= f.number_field :price, class: "form-control",
      placeholder: t("admin_page.products.h_.price") %>
    <%= render "shared/error_messages", object: product, field: :price %>
  </div>
  <div class="form-group">
    <%= f.label :price_sale, t("admin_page.w_price_sale") %>
    <%= f.number_field :price_sale, class: "form-control",
      placeholder: t("admin_page.products.h_.price_sale") %>
    <%= render "shared/error_messages", object: product, field: :price_sale %>
  </div>
  <div class="form-group">
    <%= f.label :categories, t("admin_page.w_category") %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |check| %>
      <div class="form-check">
        <%= check.check_box(class: "form-check-input") %>
        <%= check.label(class: "form-check-label"){check.text} %>
      </div>
    <% end %>
    <%= render "shared/error_messages", object: product, field: :categories %>
  </div>
  <div class="form-group">
    <%= f.label :picture, t("admin_page.w_picture") %>
    <%= f.file_field :picture, class: "form-control" %>
    <%= render "shared/error_messages", object: product, field: :picture %>
  </div>
  <div class="form-group">
    <%= f.label :description, t("admin_page.table.head.desc") %>
    <%= f.cktext_area :description %>
    <%= render "shared/error_messages", object: product, field: :description %>
  </div>
  <% if f.object.new_record? %>
    <%= button_tag t("admin_page.button.create.product"),
      type: :submit, class: "btn btn-outline btn-primary" %>
  <% else %>
    <%= button_tag t("admin_page.button.edit.product"),
      type: :submit, class: "btn btn-outline btn-success" %>
  <% end %>
<% end %>
