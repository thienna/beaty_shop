<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t "w_categories" %></h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t "admin_page.categories.list" %>
      </div>

      <div class="row">
        <div class="col-sm-offset-3 col-sm-6 table-search">
          <%= search_field_tag :table_search, nil, class: "form-control input-sm",
            placeholder: t("admin_page.table.h_search") %>
        </div>
      </div>

      <div class="panel-body">
        <table width="100%"
          class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th class="text-center"><%= t "admin_page.table.head.name" %></th>
              <th class="text-center"><%= t "admin_page.table.head.desc" %></th>
              <th class="text-center"><%= t "admin_page.w_action" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render "admin/categories/category" %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
