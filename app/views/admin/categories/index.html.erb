<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t "w_categories" %></h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t "admin_page.categories.list" %>
      </div>
      <div class="panel-body">
        <table width="100%"
          class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th class="text-center"><%= t "admin_page.w_id" %></th>
              <th class="text-center"><%= t "admin_page.table.head.name" %></th>
              <th class="text-center"><%= t "admin_page.table.head.desc" %></th>
              <th class="text-center"><%= t "admin_page.w_action" %></th>
            </tr>
          </thead>
          <tbody>
          <% if @categories.any? %>
            <%= render @categories %>
          <% else %>
            <tr>
              <td colspan="4" class="text-center">
                <%= t "admin_page.categories.nothing" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <div>
          <%= paginate @categories %>
        </div>
      </div>
    </div>
  </div>
</div>
